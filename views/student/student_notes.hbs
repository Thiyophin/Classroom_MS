        <div class="row">
            <div class="col-md-8 m-auto">
                <div class="container mt-3 ">
                    <h2 class="text-center" style="color: rgb(18, 14, 238);padding-bottom: 20px;"><strong>Notes</strong>
                    </h2>
                    <div class="table-responsive">
                        <table class="table" width="100%" style="border-top: 5px;text-align: center;">
                            <col style="width:10%">
                            <col style="width:20%">
                            <col style="width:10%">
                            <col style="width:30%">
                            <col style="width:30%">
                            <thead style="color: rgb(67, 30, 201);background-color: rgb(230, 69, 77);">
                                <tr>
                                    <th scope="col"><h4>Date</h4></th>
                                    <th scope="col"><h4>Topic</h4></th>
                                    <th scope="col"><h4>Download document</h4></th>
                                    <th scope="col"><h4>Video</h4></th>
                                    <th scope="col"><h4>Youtube links</h4></th>
                                </tr>
                            </thead>
                            <tbody style="background-color: rgb(131, 187, 224);">
                                {{#if notes}}
                                {{#each notes}}
                                <tr>
                                    <td style="color: rgb(236, 6, 6);"><h4>{{this.date}}</h4> </td>
                                    <td style="color: rgb(236, 6, 6);"><h4> {{notes.Topic}}</h4></td>
                                    <td><a href='/documents/{{this._id}}.pdf' type='application/pdf' style="color: red;"
                                            download="{{notes.Topic}}"><i class="fa fa-file-pdf-o fa-3x"
                                                aria-hidden="true" ></i></a></td>
                                    <td><video width="170" height="135" controls
                                            onended="registerAttendance('{{this.date}}')">
                                            <source src="/videos/{{this._id}}.mp4">
                                        </video></td>
                                    <td><h4><a href="{{notes.Link}}" style="color: rgb(236, 6, 6);">To learn more click
                                            here</a></h4></td>
                                </tr>
                                {{/each}}
                                {{else}}
                                <tr>
                                    <td colspan="5">
                                    <h4>  No notes found </h4>  
                                    </td>
                                </tr>
                                {{/if}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>