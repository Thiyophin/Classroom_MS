<section>
    <div class="main">
        <div class="row">
            <div class="col-md-8 m-auto">
                <div class="container  mt-3">
                    <h2 class="text-center" style="color: rgb(18, 14, 238);padding-bottom: 25px;"><strong> Today's Task
                        </strong></h2>
                    <h2 class="text-center" style="color: rgb(14, 66, 238);"> Assignment</h2>
                    <table class="table" width="100%" style="border-top: 5px;text-align: center;">
                        <col style="width:50%">
                        <col style="width:50%">
                        <thead style="color: rgb(11, 2, 134);background-color: rgb(69, 182, 182);">
                            <tr>
                                <th scope="col">Topic</th>
                                <th scope="col">File</th>
                            </tr>
                        </thead>
                        <tbody style="background-color: rgb(131, 224, 131);">
                            {{#if assignment}}
                            {{#each assignment}}
                            <tr>
                                <td>{{this.Topic}}</td>
                                <td> <a href='/assignments/{{this._id}}.pdf' type='application/pdf'>
                                        {{this.Topic}}.pdf</a></td>
                            </tr>
                            {{/each}}
                            {{else}}
                            <tr>
                                <td colspan="2">
                                    No assignments found
                                </td>
                            </tr>
                            {{/if}}
                        </tbody>
                    </table>
                    {{#if note}}
                    {{#each note}}
                    <h2 class="text-center" style="color: rgb(14, 66, 238);padding-top: 20px;"> Note</h2>
                    <video style="padding-bottom: 20px;" width="658px" height="220px" controls
                        onended="registerAttendance('{{this.date}}')">
                        <source src="/videos/{{this._id}}.mp4">
                    </video>
                    {{/each}}
                    {{else}}
                      <div class="bar pdferror text-center mt-4" style="margin-bottom: 60px;">
                         No notes found
                    </div>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    video {
        width: 100%;
        height: auto;
    }
</style>