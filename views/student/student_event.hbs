        <div class="row">
            <div class="col-md-8 m-auto">
                <div class="container  mt-3 " style="padding-bottom: 300px;">
                    <h2 class="text-center" style="color: rgb(18, 14, 238);padding-bottom: 15px;"><strong> Events
                        </strong></h2>
                    <div class="table-responsive">
                        <table class="table" width="100%" style="border-top: 5px;text-align: center;">
                            <col style="width:30%">
                            <col style="width:70%">
                            <thead style="color: rgb(67, 30, 201);background-color: rgb(230, 69, 77);">
                                <tr>
                                    <th scope="col"><h4> Date</h4></th>
                                    <th scope="col"><h4> Subject</h4></th>
                                </tr>
                            </thead>
                            <tbody style="background-color: rgb(131, 187, 224);">
                              {{#if events}}
                                {{#each events}}
                                <tr>
                                    <td style="color: rgb(236, 6, 6);"><h4>{{this.Date}}</h4> </td>
                                    <td style="color: rgb(236, 6, 6);">
                                      <h4><a href="/student/student_eventDetails/{{this._id}}" style="color: red;">
                                            {{this.Event}} </a></h4>  
                                    </td>
                                </tr>
                                {{/each}}
                                {{else}}
                                <tr>
                                    <td colspan="2">
                                     <h4>  No events found </h4> 
                                    </td>
                                </tr>
                                {{/if}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
          </div>  