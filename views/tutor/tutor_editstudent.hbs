<section>
    <div class="main">
        <div class="row">
            <div class="col-md-8 m-auto">
                <div class="container mt-5 pl-5">
                    <h2 class="text-center" style="color: rgb(18, 14, 238);"><strong>Edit student details</strong></h2>
                    <form action="/tutor_editstudent/{{student._id}}" id="edit-studentform" method="POST" >
                        <div class="form-group">
                            <label style=" color: rgba(23, 36, 211, 0.836);"><strong> Name:</strong></label>
                            <input type="text" class="form-control" name="Name" value="{{student.Name}}" >
                        </div>
                        <div class="form-group">
                            <label style=" color: rgba(23, 36, 211, 0.836);"><strong> Gender: </strong></label>
                            <input type="text" class="form-control" name="Gender" value="{{student.Gender}}" >
                        </div>
                        <div class="form-group">
                            <label style=" color: rgba(23, 36, 211, 0.836);"><strong> Roll no: </strong></label>
                            <input type="number" class="form-control" name="RollNo" value="{{student.RollNo}}" >
                        </div>
                        <div class="form-group">
                            <label style=" color: rgba(23, 36, 211, 0.836);"><strong> Mob: </strong></label>
                            <input type="number" class="form-control" name="Mob"value="{{student.Mob}}"  >
                        </div>
                        <div class="form-group">
                            <label style=" color: rgba(23, 36, 211, 0.836);"><strong> Email:</strong></label>
                            <input type="email" class="form-control" name="Email" value="{{student.Email}}" >
                        </div>
                        <div class="form-group">
                            <label style=" color: rgba(23, 36, 211, 0.836);"><strong> Address: </strong></label>
                            <input type="text" class="form-control" name="Address"value="{{student.Address}}"  >
                        </div>
                        <div class="buttons  mt-3 " style="padding-bottom: 20px;">
                        <button type="submit" class="btn btn-success rounded-pill btn-xl" ><strong> Save changes </strong></button>
                         <a href="/tutor_students" class="btn btn-danger rounded-pill btn-xl" style="float: right;" ><strong> Cancel</strong></a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    const form =  document.querySelector('#edit-studentform');
    var delayInMilliseconds=2000
   form.addEventListener('submit',event=>{
       event.preventDefault();
       swal({
           title:'Confirmation',
           text:'Are you sure?',
           buttons:{
               cancel:true,
               Confirm:'Submit'
           }
       }).then(val =>{
           if(val){
               swal({
                   title:'Student profile updated',
                   icon:'success',
                   buttons:{ok:false}
               })
               setTimeout(function(){
             form.submit()
               },delayInMilliseconds)     
           }
       })
   })
   </script>