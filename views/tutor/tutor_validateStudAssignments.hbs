<section>
  <div class="main">
    <div class="row">
      <div class="col-md-8 m-3">
        {{#if profile}}
        <img src="/students-images/{{profile.id}}.jpg" alt="" style=" border-radius: 50%;
          width: 150px;height:150px;float: right;" draggable="false">
        <div class="student-profile" style=" color: rgba(23, 36, 211, 0.836);padding-bottom: 100px;">
          <label><strong>Name:</strong> {{profile.Name}}</label> <br>
          <label><strong>Roll no:</strong> {{profile.RollNo}} </label> <br>
          <label><strong>Mobile no:</strong> {{profile.Mob}} </label> <br>
          <label><strong>Email address:</strong> {{profile.Email}} </label> <br>
        </div>
        {{/if}}
      </div>
    </div>
    <h2 class="text-center" style="color: rgb(18, 14, 238);padding-bottom: 15px;"><strong>Submitted Assignments </strong></h2>
    <table class="table" width="100%" style="border-top: 5px;text-align: center;">
                    <col style="width:35%">
	                <col style="width:35%">
	                <col style="width:20%">
                    <col style="width:10%">
                    <thead style="color: rgb(11, 2, 134);background-color: rgb(69, 182, 182);">
                        <tr>
                            <th scope="col">Topic</th>
                            <th scope="col">File</th>
                        </tr>
                    </thead>
                    <tbody style="background-color: rgb(131, 224, 131);">
                      {{#each assignments}}
                        <tr>
                            <td >{{this.Topic}}</td>      
                            <td > <a href="/studentAssignments/{{this._id}}.{{../profile.id}}.pdf"   type='application/pdf'
                             class="btn btn-info rounded-pill" style="color: rgb(240, 236, 236);">Open</a> 
                            </td>
                        </tr>
                     {{/each}}
                    </tbody>
                </table> 
  </div>
</section>