<section>
    <div class="main">
        <div class="row">
      <div class="col-md-8 m-auto ">
        <h2 class="text-center" style="color: rgb(18, 14, 238);padding-top: 15px;">
        <strong>Attendance</strong></h2>     
						<div class= "container">
                            <form action="/tutor_attendance" method="POST" autocomplete="off">
                           <div class= "form" style = "text-align:center" >                  
                  <input type= "text" id="datepicker" class= "form-control text-center" data-date-format="d/m/yyyy" name="date"
                  data-provide= "datepicker" placeholder= "Select Date" style= "width:250p;padding-left: 15px;" required> 
                  <input type="hidden"  >   
                        <button class="btn btn-success"  type="submit">Submit</button>
                           </div>
                           </form>
                     </div>
                      <div class="card bg-info mt-3">
                        <div class="card-body text-center">
                        <p class="card-text" style="color: white;font-weight: bold;"> Date  :  {{todayDate}}</p>
                          </div>
                         </div>
                     <div class="table-responsive">
					  <table class="table" width="100%" style="border-top: 5px;text-align: center;">
                    <col style="width:25%">
	                <col style="width:50%">
	                <col style="width:25%">
                    <thead style="color: rgb(252, 252, 253);background-color: rgb(44, 97, 241);">
                        <tr>
                            <th scope="col">Roll No</th>
                            <th scope="col">Name</th>
                            <th scope="col">Attendance</th>
                        </tr>
                    </thead>
                    <tbody style="background-color: rgb(131, 187, 224);">
                        {{#each details}}
                     <tr>
                         <td style="color: rgb(2, 11, 88);">{{this.RollNo}}</td>
                         <td style="color: rgb(2, 11, 88) ;">{{this.Name}}</td>
                          {{#if this.status}}
                         <td style="color:  rgb(24, 100, 21);">P</td>
                          {{else}}
                         <td style="color:  rgb(190, 27, 16);">A</td>
                          {{/if}}
                     </tr>
                     {{/each}}
                    </tbody>
                </table> 
                     </div>
					</div>
				</div>
			</div>
</section>

 
