<section>
    <div class="main">
<div class="row">
    <div class="col-md-8 m-auto">
        <div class="container mt-5 pl-5">
            {{#each profile}}
            <h2 class="text-center" style="color: rgb(18, 14, 238);"><strong>Profile</strong>  </h2>    
             <img src="/tutor-images/{{this._id}}.jpg" alt="" style=" border-radius: 50%;
          width: 100px;height:100px;float: right;">
            <div class="tutor-profile" style=" color: rgba(23, 36, 211, 0.836);">
                 <label><strong>Name:</strong> {{this.Name}}</label> <br>             
                  <label><strong>Class:</strong> {{this.Class}} </label>   <br>            
                  <label><strong>Subject:</strong> {{this.Subject}} </label> <br>                
                  <label><strong>Address:</strong> {{this.Address}} </label>  <br>               
                   <label><strong>pincode:</strong> {{this.Pincode}} </label> <br>             
                   <label><strong>Mobile No:</strong> {{this.MobileNo}} </label>  <br>               
                  <label><strong>Email address:</strong> {{this.Email}} </label> <br>
            </div>
                 <a href="/tutor_editprofile/{{this._id}}" class="btn btn-primary edit-button">
                  <strong>Edit Profile</strong>  </a>
                  {{/each}}
        </div>
    </div>
</div>
</div>
</section>

